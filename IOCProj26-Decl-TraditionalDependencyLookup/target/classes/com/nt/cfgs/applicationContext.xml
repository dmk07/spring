<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans https://www.springframework.org/schema/beans/spring-beans-4.3.xsd
		http://www.springframework.org/schema/context https://www.springframework.org/schema/context/spring-context-4.3.xsd">

  <!-- Cfg dependent spring bean -->
  <bean id="bat1"  class="com.nt.beans.CricketBat" lazy-init="true"/>
  
  <!-- cfg Target spring bean -->
  <bean id="cktr" class="com.nt.beans.Cricketer"  lazy-init="true">
      <constructor-arg  name="batId"  value="bat1"/>  <!-- It is dependent class bean id injection -->
       <!-- <constructor-arg name="batId">
          <idref  bean="bat2"/>
      </constructor-arg> -->
  </bean>
</beans>
